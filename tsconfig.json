{
	"compilerOptions": {
		"lib": ["es7"],
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "."
	},
	"include": [
		"main.ts",
		"play.ts",
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
